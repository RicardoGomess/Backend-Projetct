					                        <option value=6>Banana</option>
					                      
					                        <option value=7>Pasta</option>
					                    </select>
									  <span class="input-group-btn">
										<button type="submit" class="btn btn-primary" id="add-btn">
                                            <i class="bi bi-plus-circle-fill"></i> Adicionar Comida
										</button>
									  </span>
									</div>
								</div>
							
							</form>	
						</div>
					</div>
				</div>
