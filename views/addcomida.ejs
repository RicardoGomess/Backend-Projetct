										<td>
											<a href="#" class="btn btn-default btn-xs">
												<i class="bi bi-pencil"></i> Edit
											</a> 
											<a href="#" class="btn btn-danger btn-xs">
												<i class="bi bi-trash"></i> Delete
											</a> 
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

			<footer>
				<div class="row pad">
					<div class="col-lg-12 text-center">
						
					</div>
				</div>
			</footer>

		</div>

		
